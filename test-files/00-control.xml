<?xml version="1.0" encoding="UTF-8"?>
<Schedule>
  <!-- Task to check download a tiny file, at 5 minutes past the hour -->
  <Task> 
    <TaskRef>001</TaskRef>
    <Description>Download a medium file from network</Description>
    <TimePeriod>5</TimePeriod>
    <TimeOffset>0</TimeOffset>
    <TestType>Download</TestType>
    <TestOptions>
      <Option key="filesize" value="medium"/>
      <Option key="workers" value="4"/>
      <Option key="offset" value="0"/> 
      <Option key="repeat" value="false"/>
      <Option key="timeout" value="60"/> 
      <Option key="retry" value="3"/> 
    </TestOptions> 
  </Task>
  <!-- Task to check download a small file, at 10 minutes past the hour -->
  <Task> 
    <TaskRef>002</TaskRef>
    <Description>Download a medium file from network</Description>
    <TimePeriod>10</TimePeriod>
    <TimeOffset>0</TimeOffset>
    <TestType>Download</TestType>
    <TestOptions>
      <Option key="filesize" value="medium"/>
      <Option key="workers" value="1"/>
      <Option key="offset" value="false"/> 
      <Option key="repeat" value="false"/>
      <Option key="timeout" value="60"/> 
      <Option key="retry" value="3"/> 
    </TestOptions> 
  </Task>
</Schedule>
